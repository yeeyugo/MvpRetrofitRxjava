<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/colorWhite"/>
                    <stroke android:width="1dp" android:color="@color/linkTextColor"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_home_pay_model_select" android:top="14dp" android:left="45dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/btcBg"/>
            <stroke android:width="1dp" android:color="@color/btcBg"/>
        </shape>
    </item>
</selector>